
@using Squash.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}







<!DOCTYPE html>
<!--[if IE 9]>         <html class="ie9 no-focus" lang="en"> <![endif]-->
<!--[if gt IE 9]><!-->
<html class="no-focus" lang="en">
 <!--<![endif]-->
<head>
    <meta charset="utf-8">

    <title>Squash - Login</title>

    <meta name="description" content="Squash - Login">
    <meta name="author" content="pixelcave">
    <meta name="robots" content="noindex, nofollow">
    <meta name="viewport" content="width=device-width,initial-scale=1.0,user-scalable=0">

    <!-- Icons -->
    <!-- The following icons can be replaced with your own, they are used by desktop and mobile browsers -->
    <link rel="shortcut icon" href="assets/img/favicons/favicon.png">

    <link rel="icon" type="image/png" href="assets/img/favicons/favicon-16x16.png" sizes="16x16">
    <link rel="icon" type="image/png" href="assets/img/favicons/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="assets/img/favicons/favicon-96x96.png" sizes="96x96">
    <link rel="icon" type="image/png" href="assets/img/favicons/favicon-160x160.png" sizes="160x160">
    <link rel="icon" type="image/png" href="assets/img/favicons/favicon-192x192.png" sizes="192x192">

    <link rel="apple-touch-icon" sizes="57x57" href="assets/img/favicons/apple-touch-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="assets/img/favicons/apple-touch-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="assets/img/favicons/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="assets/img/favicons/apple-touch-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="assets/img/favicons/apple-touch-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="assets/img/favicons/apple-touch-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="assets/img/favicons/apple-touch-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="assets/img/favicons/apple-touch-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="assets/img/favicons/apple-touch-icon-180x180.png">
    <!-- END Icons -->
    <!-- Stylesheets -->
    <!-- Web fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400italic,600,700%7COpen+Sans:300,400,400italic,600,700">

    <!-- Bootstrap and OneUI CSS framework -->
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" id="css-main" href="~/Content/oneui.css">
    <link href="~/Content/custom.css" rel="stylesheet" />
    <!-- You can include a specific file from css/themes/ folder to alter the default color theme of the template. eg: -->
    <!-- <link rel="stylesheet" id="css-theme" href="~/Content/themes/flat.min.css"> -->
    <!-- END Stylesheets -->
</head>
<body>

        
    <!-- Login Content -->
    <div class="bg-white pulldown">
        <div class="content content-boxed overflow-hidden">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
                    <div class="push-30-t push-50 animated fadeIn">
                        <!-- Login Title -->
                        <div class="text-center">
                            <img src="~/Images/logo.svg" style="width:50%" />
                            <p class="text-muted push-15-t">Track your bugs so you can squash them as soon as possible!</p>
                        </div>
                        <!-- END Login Title -->
                        <!-- Login Form -->
                        <!-- jQuery Validation (.js-validation-login class is initialized in js/pages/base_pages_login.js) -->
                        <!-- For more examples you can check out https://github.com/jzaefferer/jquery-validation -->

                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <div class="form-material form-material-primary floating">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <div class="form-material form-material-primary floating">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-6">
                                    <label class="css-input switch switch-sm switch-primary">
                                        @Html.CheckBoxFor(x => x.RememberMe)
                                    </label>
                                </div>
                                <div class="col-xs-6">
                                    <div class="font-s13 text-right push-5-t">
                                        <a href="@Url.Action("ForgotPassword","Account")">Forgot Password?</a>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group push-30-t">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
                                        <button class="btn btn-sm btn-block btn-success" type="submit">Log in</button>
                                        <button class="btn btn-sm btn-block btn-warning" onclick="window.location.href = '@Url.Action(" Register","Account")';" type="button">Sign Up</button>

                                    </div>
                                </div>
                                <div class="row" style="padding-top:2%">
                                    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
                                        <button data-toggle="modal" data-target="#viewDemoLogins" type="button" class="btn btn-lg btn-block btn-primary">Demo Logins</button>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- END Login Form -->
                    </div>
                </div>
            </div>

        </div>


        <div class="modal fade" id="viewDemoLogins" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-xl modal-dialog-top">
                <div class="modal-content">
                    <div class="block">
                        <div class="block-header">
                            Demonstration Logins
                        </div>
                        <div class="block-content">
                            <div class="col-lg-3">

                                <div class="block">
                                    <div class="block-content block-content-full text-center">
                                        <h3 class="font-w300 text-black push-30-t push-30">Administrator</h3>
                                        <h5 class="push-30">This role has the ability to assign people to roles, and also has the ability to manage users on projects, can manage tickets on any project, and are able to submit tickets to any project.</h5>
                                        <div class="push-30">
                                            <span class="item item-2x item-circle bg-danger-light">
                                                <i class="si si-user text-danger"></i>
                                            </span>
                                        </div>
                                        <a class="btn btn-minw btn-rounded btn-noborder btn-danger push-5" href="@Url.Action("LoginDemoAdmin", "Account")">Login</a>
                                        <p class="font-s12 text-muted">Demo Account</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="block">
                                    <div class="block-content block-content-full text-center">
                                        <h3 class="font-w300 text-black push-30-t push-30">Project Manager</h3>
                                        <h5 class="push-30">This role has the ability to assign developers and submitters to projects and developers to tickets. They can also work on tickets on projects they are assigned to.</h5>
                                        <div class="push-30">
                                            <span class="item item-2x item-circle bg-warning-light">
                                                <i class="si si-user text-warning"></i>
                                            </span>
                                        </div>
                                        <a class="btn btn-minw btn-rounded btn-noborder btn-warning push-5" href="@Url.Action("LoginDemoManager", "Account")">Login</a>
                                        <p class="font-s12 text-muted">Demo Account</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3">

                                <div class="block">
                                    <div class="block-content block-content-full text-center">
                                        <h3 class="font-w300 text-black push-30-t push-30">Developer</h3>
                                        <h5 class="push-30">This role has the ability to view tickets on projects they are assigned to, and for working and completing tickets that they are assigned to by project managers.</h5>
                                        <div class="push-30">
                                            <span class="item item-2x item-circle bg-primary-lighter">
                                                <i class="si si-user text-primary"></i>
                                            </span>
                                        </div>
                                        <a class="btn btn-minw btn-rounded btn-noborder btn-primary push-5" href="@Url.Action("LoginDemoDeveloper", "Account")">Login</a>
                                        <p class="font-s12 text-muted">Demo Account</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3">

                                <div class="block">
                                    <div class="block-content block-content-full text-center">
                                        <h3 class="font-w300 text-black push-30-t push-30">Submitter</h3>
                                        <h5 class="push-30">This role has the ability to submit new tickets for projects they are assigned to and communicate with developers through those tickets to solve those tickets.</h5>
                                        <div class="push-30">
                                            <span class="item item-2x item-circle bg-success-light">
                                                <i class="si si-user text-success"></i>
                                            </span>
                                        </div>
                                        <a class="btn btn-minw btn-rounded btn-noborder btn-success push-5" href="@Url.Action("LoginDemoSubmitter", "Account")">Login</a>
                                        <p class="font-s12 text-muted">Demo Account</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-sm btn-default" type="button" data-dismiss="modal"><i class="fa fa-close push-5-r"></i>Close</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- END Login Content -->
    <!-- Login Footer -->
    <div class="pulldown push-30-t text-center animated fadeInUp">
        <small class="text-muted"><span class="js-year-copy"></span> &copy; Squash 0.0.4</small>
    </div>
    <!-- END Login Footer -->
    <!-- OneUI Core JS: jQuery, Bootstrap, slimScroll, scrollLock, Appear, CountTo, Placeholder, Cookie and App.js -->
    <script src="~/Scripts/core/jquery.min.js"></script>
    <script src="~/Scripts/core/bootstrap.min.js"></script>
    <script src="~/Scripts/core/jquery.slimscroll.min.js"></script>
    <script src="~/Scripts/core/jquery.scrollLock.min.js"></script>
    <script src="~/Scripts/core/jquery.appear.min.js"></script>
    <script src="~/Scripts/core/jquery.countTo.min.js"></script>
    <script src="~/Scripts/core/jquery.placeholder.min.js"></script>
    <script src="~/Scripts/core/js.cookie.min.js"></script>
    <script src="~/Scripts/app.js"></script>

    <!-- Page JS Plugins -->
    <script src="assets/js/plugins/jquery-validation/jquery.validate.min.js"></script>

</body>
</html>